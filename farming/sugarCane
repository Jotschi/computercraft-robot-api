os.loadAPI("disk/advrs")

advrs.setSides("bottom", "bottom")

function placeOrBreakFrame()
  advrs.toggle(colors.red)
  os.sleep(0.5)
  advrs.toggle(colors.red)
end

function move(color)
  advrs.toggle(color)
  os.sleep(0.25)
  advrs.toggle(color)
  os.sleep(0.5)
end

function waitAnnounce()
  for i=300,1,-1 do
    term.clear()
    term.setCursorPos(1,1)
    print("changing directions in "..tostring(i).." seconds")
    os.sleep(1)
  end
end

local direction = 0
while true do
  
  if (direction == 0) then
    term.clear()
    term.setCursorPos(1,1)
    print("move forward")
    placeOrBreakFrame()
    move(colors.black)
  else
    term.clear()
    term.setCursorPos(1,1)
    print("move backward")
    placeOrBreakFrame()
    move(colors.white)
  end
  
  if (advrs.isSet(colors.green)) then
    waitAnnounce()
    if (direction == 0) then
      direction = 1
    else
      direction = 0
    end
  end
end
