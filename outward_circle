function testIt(startX, startY, color)
   local x = 0
   local y = 0
   local dx = 0
   local dy = -1
   local t = math.max(startX, startY)
   local maxI = t * t

   for i=0,maxI do
	if ((-startX / 2 <= x) and (x <= startX / 2) and (-startY / 2 <= y) and (y <= startY / 2)) then
            
          local xP = x + 41
          local yP = y + 20
          --print(x .. " " .. y)
	  paintutils.drawPixel(xP,yP, color)
          os.sleep(0.015)
	end
	if ((x == y) or ((x < 0) and (x == -y)) or ((x > 0) and (x == 1 - y))) then
	  t = dx
	  dx = -dy
	  dy = t
	end
	x = x + dx
	y = y + dy
   end
end

--  paintutils.drawPixel(40,20,colors.red)
testIt(100,100, colors.green)
testIt(100,100, colors.yellow)

