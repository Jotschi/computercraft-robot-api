while true do 
  local sTS = http.get("http://lws.jotschi.de/ts3viewer/index.php")
  term.clear()
  term.setCursorPos(1,1)
  local time = os.time()
  time = textutils.formatTime(time, true)
  term.write("Minecraft Time: "..time)
  term.setCursorPos(1,5)
  term.write("Users within TS:")
  term.setCursorPos(1,6)
  local users = sTS.readAll()
  -- users = string.gsub(users, ";", "\n")
  textutils.slowPrint(users)
  sTS.close()
  os.sleep(1)
end
